                $month = substr($entry['free_date'], 4, 2);
                $day = substr($entry['free_date'], 6, 2);

                $date2 = "";
                if ($entry["opt7text"] != $entry["free_date"]) {
                    $year2 = substr($entry['opt7text'], 0, 4);
                    $month2 = substr($entry['opt7text'], 4, 2);
                    $day2 = substr($entry['opt7text'], 6, 2);

