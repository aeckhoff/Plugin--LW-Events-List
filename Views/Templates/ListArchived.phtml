                <p>
                    <?php
                    if (!empty($entry["url"])) {
                        if ($this->lang == "en") {
                            $more = "more";
                        }
                        else {
                            $more = "mehr";
                        }
                        
                        if (strstr($entry["url"], '[[intern:')) {
                            $dummy = str_replace('[[intern:', '', $entry["url"]);
                            $pid = str_replace(']]', '', $dummy);
                            $pid = intval(trim($pid));
                            
                            $url = $this->baseUrlWithoutIndex.$pid;
                        }else{
                            $url = $entry["url"];
                        }

                        echo $entry["info"];
                        
                        echo "...[<a class=\"extern\" target=\"_blank\" href=\"" . $url . "\">" . $more . "</a>]";
